[
  {
    "title": "1. Connection Settings",
    "fields": [
      {
        "type": "textInput",
        "label": "Address",
        "value": "address",
        "regex": ".*",
        "required": true,
        "placeholder": "e.g: localhost:6379"
      },
      {
        "type": "textInput",
        "label": "Password",
        "value": "password",
        "regex": ".*",
        "required": false,
        "placeholder": "",
        "secret": true
      },
      {
        "type": "textInput",
        "label": "Database",
        "value": "database",
        "regex": ".*",
        "required": false,
        "placeholder": "",
        "preRequisiteField": {
          "name": "clusterMode",
          "selectedValue": false
        }
      },
      {
        "type": "checkbox",
        "label": "Cluster Mode",
        "value": "clusterMode",
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Secure",
        "value": "secure",
        "default": false
      },
      {
        "type": "checkbox",
        "preRequisiteField": {
          "name": "secure",
          "selectedValue": true
        },
        "label": "Skip verify",
        "value": "skipVerify",
        "default": false,
        "footerNote": "if you are using self signed certificates make this field true"
      },
      {
        "type": "textareaInput",
        "preRequisiteField": {
          "name": "secure",
          "selectedValue": true
        },
        "label": "CA certificate",
        "value": "caCertificate",
        "regex": ".*",
        "required": false,
        "placeholder": "CA Certificate",
        "footerNote": "Can be skipped for CA's that can be verified with any client (eg. Elasticache)"
      },
      {
        "type": "textInput",
        "label": "Prefix",
        "value": "prefix",
        "regex": ".*",
        "required": false,
        "placeholder": ""
      }
    ]
  }
]