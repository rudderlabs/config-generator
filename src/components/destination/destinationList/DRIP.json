[
  {
    "title": "Connection Settings",
    "fields": [
      {
        "type": "textInput",
        "label": "Account ID",
        "value": "accountId",
        "inputFieldType": "password",
        "regex": "^(.{0,100})$",
        "regexErrorMessage": "Please check your Account ID. It should be something like 276450567",
        "required": true,
        "placeholder": "e.g. 276450567",
        "secret": true
      },
      {
        "type": "textInput",
        "label": "API Token",
        "value": "apiKey",
        "inputFieldType": "password",
        "regex": ".*",
        "required": false,
        "placeholder": "e.g. tZrPAgHyn2jMWOVGKrS6gBGLYT8v9kJE",
        "secret": true
      },
      {
        "type": "textInput",
        "label": "Campaign ID",
        "value": "campaignId",
        "regex": "^(.{0,100})$",
        "regexErrorMessage": "Please check your Campaign ID. It should be numerical, something like 276450567",
        "required": false,
        "placeholder": "e.g. 276450567",
        "secret": true
      },
      {
        "type": "checkbox",
        "label": "User Creation Mode",
        "value": "enableUserCreation",
        "default": true,
        "footerNote": "When enabled it will create new user with email if user doesn't exist for track calls."
      }
    ]
  },
  {
    "title": "Native SDK",
    "fields": [
      {
        "type": "checkbox",
        "label": "Use device-mode to send events",
        "value": "useNativeSDK",
        "default": false
      }
    ]
  }
]
